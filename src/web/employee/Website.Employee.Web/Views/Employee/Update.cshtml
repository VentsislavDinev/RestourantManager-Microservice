@model Web.Employee.Service.ViewModel.EmployeeViewModel

@{
    ViewData["Title"] = "Update";
}
<div class="br-mainpanel">
    <div class="br-pagebody">
        <div class="br-section-wrapper">

            <div class="row mg-t-80">
                <div class="col-xl-6">
                    <div class="form-layout form-layout-4">
                        <form method="post">

                            <div class="row">
                                <label class="col-sm-4 form-control-label">First name: <span class="tx-danger">*</span></label>
                                <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                                    <input type="text" class="form-control" asp-for="Name"  value="@Model.Name">

                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div><!-- row -->
                            <div class="row">
                                <label class="col-sm-4 form-control-label">Last name: <span class="tx-danger">*</span></label>
                                <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                                    <input type="text" class="form-control" asp-for="LastName" value="@Model.LastName">

                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div><!-- row -->
                            <div class="row mg-t-20">
                                <label class="col-sm-4 form-control-label">Email: <span class="tx-danger">*</span></label>
                                <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                                    <input type="text" class="form-control" asp-for="Email"  value="@Model.Email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mg-t-20">
                                <label class="col-sm-4 form-control-label">Possition: <span class="tx-danger">*</span></label>
                                <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                                    <input type="text" class="form-control" asp-for="Possition" value="@Model.Possition">
                                    <span asp-validation-for="Possition" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mg-t-20">
                                <label class="col-sm-4 form-control-label">PhoneNumber: <span class="tx-danger">*</span></label>
                                <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                                    <input type="text" class="form-control" asp-for="PhoneNumber"  value="@Model.PhoneNumber">
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mg-t-20">
                                <label class="col-sm-4 form-control-label">Address: <span class="tx-danger">*</span></label>
                                <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                                    <input type="text" class="form-control" asp-for="Address"  value="@Model.Address">
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mg-t-20">
                                <label class="col-sm-4 form-control-label">Email: <span class="tx-danger">*</span></label>
                                <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                                    <input type="text" class="form-control" asp-for="Email"  value="@Model.Email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-layout-footer mg-t-30">
                                <button class="btn btn-info">Submit Form</button>
                            </div><!-- form-layout-footer -->
                        </form>
                    </div><!-- form-layout -->

                </div><!-- col-6 -->
            </div>

        </div>
    </div>
</div>